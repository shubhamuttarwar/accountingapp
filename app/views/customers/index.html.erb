<h1>Customers</h1>


<%= link_to 'Add New Customer', new_customer_path %>
<p><br></p>


<div class = "container">
<table class = "table table-striped  table-hover">
	<tr>
		<th>Name</th>
		<th>Phone</th>
		<th>Address</th>
		<th>Email</th>
	</tr>

	<% @customer.each do |cs| %>
	  <tr class = "active">
	  	<td><%= cs.name.upcase %></td>
	  	<td><%= cs.phone %></td>
	  	<td><%= cs.address %></td>
	  	<td><%= cs.email.downcase %></td>
	  	<td><%= link_to 'Show Projects', customer_projects_path(cs) %></td>
	  	<td><%= link_to 'Show',customer_path(cs) %></td>
	  	<td><%= link_to 'Edit', edit_customer_path(cs) %></td>
	  	<td><%= link_to 'Destroy', customer_path(cs),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	  <% end %>
</table>
</div>

