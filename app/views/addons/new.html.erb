<div class = "container">
<h2>Add a Add-On:</h2>
<%= form_with(model: [@project, @project.addons.build ], local: true) do |form| %>
  <p>
    <%= form.label :Service_Name %><br>
    <%= form.text_field :service %>
  </p>
  <p>
    <%= form.label :Description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label :price %><br>
    <%= form.number_field :price %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', customers_path %>
</div>