
<div class = "container">
<%= month_calendar events: @projects do |date,pro| %>
	<%= date.day %>
  <% pro.each do |project| %>
     <div>
      <ul>
        <li><%= project.jname %></li>
      </ul>
     </div>
  <% end %>
<% end %>
</div>
<div class = "container">
<h3> Projects for this Month</h3><br>
</div>
<div class = "container">
<table class = "table table-striped  table-hover">
	<tr>
		<th>Customer Name</th>
		<th>Project Name</th>
		<th>Description</th>
		<th>Price</th>
		<th>Start Date</th>
		<th>End Date</th>
	</tr>
    <% @projects.each do |pro| %>
    <tr>
       <td><%=  Customer.find(pro.customer_id).name %></td>
       <td><%= pro.jname %></td>
       <td><%= pro.jdescription %></td>
       <td><%= pro.price %></td>
       <td><%= pro.start_time.to_s(:long) %></td>
       <td><%= pro.end_time.to_s(:long) %></td>
    </tr>
    <% end %>
</table>
</div>

